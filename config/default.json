  "TOPICS":{
    "KAFKA": {
      "ZOOKEEPER": {
        "HOSTS": "localhost:2181"
      },
      "CONSUMER": {
        "CONFIG": {
          "pollingEnabled": false,
          "pollingCronTab": "*/10 * * * * *",
          "pollingTimeZone": "UTC"
        },
        "OPTIONS": {
          "debug": false,
          "metadata.broker.list": "localhost:9092",
          "group.id": "kafka-mojaloop-group",
          "client.id": "kafka-mojaloop-client-cons",
          "compression.codec": "none",
