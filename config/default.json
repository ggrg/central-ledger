      "NOTIFICATION":{
        "TEMPLATE": "topic-{{dfspName}}-prepare-notification",
        "REGEX": "topic-(.*)-prepare-notification"
      },
      "POSITION":{
        "TEMPLATE": "topic-{{dfspName}}-prepare-position",
        "REGEX": "topic-(.*)-prepare-position"
      }
    }
  }
